            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string",
                  "example": "64319450e15991751968e7c5"
                },
                "content": {
                  "type": "string",
                  "example": "今天天氣真好，一起去打羽球"
                },
                "image": {
                  "type": "string",
                  "example": "https://imgur.com/kuYyH1O"
                },
                "likes": {
                  "type": "number",
                  "example": 123
                }
              },
              "required": [
                "user",
                "content"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "貼文資訊",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
